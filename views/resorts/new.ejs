<% include ../partials/header %>
<div class="container">
    <h1 style="text-center">Create a New Resort</h1>
    <div style="width: 50%; margin: 25px auto;">
        <form action="/resorts" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" id="name" placeholder="Atlantis">
            </div>
            <div class="form-group">
                <label for="image">Image Url</label>
                <input class="form-control" type="text" name="image" id="image"  placeholder="https://image.jpeg" required>
            </div>
            <div class="form-group">
                <label for="cost">Cost</label>
                <input class="form-control" type="number" name="cost" id="cost" placeholder="9.99" step="0.01" min="0" required>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" placeholder="Paradise Island, Bahamas">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="description" id="description" placeholder="Largest open-air marine habitat">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/resorts">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>

