<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Edit <%= resort.name %></h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/resorts/<%=resort._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input class="form-control" type="text" name="name" id="name" value="<%= resort.name %>">
                    </div>
                    <div class="form-group">
                        <label for="image">Image Url</label>
                        <input class="form-control" type="text" name="image" id="image" title="" placeholder="https://images.jpeg" value="<%= resort.image %>" required>
                        <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small>
                    </div>
                    <div class="form-group">
                        <label for="cost">Cost</label>
                        <input class="form-control" type="number" name="cost" id="cost" value="<%= resort.cost %>" step="0.01" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="location">Location</label>
                        <input class="form-control" type="text" name="location" id="location" value="<%= resort.location %>">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input class="form-control" type="text" name="description" id="description" value="<%= resort.description %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Update!</button>
                    </div>
                </form>
                <a href="/resorts">Go Back</a>
            </div>
        </div>
    </div>
<% include ../partials/footer %>

